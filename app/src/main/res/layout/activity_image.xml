<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.thedrop.newmath.Activities.ImageActivity">


    <ImageView
        android:id="@+id/image_activity_mainImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_social_share"
        app:backgroundTint="@color/colorAccent"
        app:fabSize="normal"
        app:layout_behavior="by.thedrop.newmath.Templates.ScrollAwareFABBehavior"
        app:rippleColor="?attr/colorBackgroundFloating"/>
</RelativeLayout>
